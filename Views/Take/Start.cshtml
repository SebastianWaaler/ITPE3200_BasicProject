@model QuizMaker.Models.QuizSubmissionViewModel
@{
    ViewData["Title"] = "Take Quiz";
}

<h2>@Model.Quiz.Title</h2> 

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<form asp-action="Submit" method="post">
    <input asp-for="QuizId" type="hidden" />

    <div class="mb-3">
        <label asp-for="ParticipantName" class="form-label"></label>
        <input asp-for="ParticipantName" class="form-control" required />
        <span asp-validation-for="ParticipantName" class="text-danger"></span>
    </div>

    <ol class="mb-3">
        @foreach (var q in Model.Quiz.Questions)
        {
            <li class="mb-2">
                <strong>@q.Text</strong> <span class="badge bg-info">@q.Points pt</span>
                <div class="mt-1">
                    @foreach (var o in q.Options)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   name="UserAnswers[@q.Id]"
                                   value="@o.Id"
                                   id="o_@o.Id" />
                            <label class="form-check-label" for="o_@o.Id">@o.Text</label>
                        </div>
                    }
                </div>
            </li>
        }
    </ol>

    <button class="btn btn-primary">Submit</button>
</form>
